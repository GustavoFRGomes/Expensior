<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/regular_expense_title"
            android:layout_margin="@dimen/margin_small"
            android:layout_gravity="start|center_vertical"
            android:paddingStart="@dimen/margin_large"
            style="@style/TextViewListItem"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <xyz.jaggedlab.gugas.expensior.ui_components.RoundCorneredBorderTextView
            android:id="@+id/regular_expense_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:layout_gravity="center_vertical"
            custom:border_color="@color/black"
            style="@style/TextViewListItem" />

        <TextView
            android:id="@+id/regular_expense_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:layout_gravity="end|center_vertical"
            android:text=""
            android:drawableEnd="@drawable/ic_last_page_black_24dp"
            style="@style/TextViewListItem"
            android:paddingEnd="@dimen/margin_small" />

    </LinearLayout>

    <View
        android:id="@+id/item_separator_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />

</LinearLayout>